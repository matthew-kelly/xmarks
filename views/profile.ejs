<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B"
    crossorigin="anonymous">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="profile_background table">
          <div id="profile_pic"></div>
        </div>
        <h1 class="username">
          <%= userObj.username %>
        </h1>
      </div>
    </div>
    <div class="row">
      <div class="table col-4">
        <p>
          <%= userObj.description %>
        </p>
      </div>
      <div class="table col-8">
        <div class="table_buttons">
          <button>Maps I've made!</button>
          <button>Maps I've liked!</button>
          <button>Maps I've contributed to</button>
        </div>
        <ul>
          <% for (var map in mapsObj) { %>
            <li>
              <button id="map<%= mapsObj[map].id %>">
                <%= mapsObj[map].name %>
              </button>
            </li>
            <% } %>
        </ul>
        <button class='btn btn-danger create_map'> Create a new map</button>
      </div>
    </div>
  </div>
  <!-- <img src= /public/images/redx.png> -->
  <div class="mapdiv" id='map'></div>
  <div class=map_buttons>
    <button class='btn btn-primary name_map'>Name this map</button>
    <button class='btn btn-primary close_map'>Close Map</button>
  </div>
  <form method="POST" action="/maps" id="name_map_group">
    <div class="form-group">
      <label class="new_map_header" for="map_name">Enter a map name</label>
      <input name="map_name" type="text" class="form-control" id="map_name" placeholder="Ex: Ryan Reynolds sightings">
      <input name="pins_array" type="hidden">
    </div>
    <button type="submit" class="btn btn-primary">Save Map!</button>
  </form>
</body>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA3rnYZtj-7VMyBjm0Z2Qx3gYktTvZ4nqw">


</script>

</html>
