<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B"
    crossorigin="anonymous">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Architects+Daughter" rel="stylesheet">
  <script>
  function play() {
    var audio = document.getElementById("audio");
    audio.play();
  }
</script>
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="profile_background table">
          <div id="profile_pic"><img src="../images/pirate.jpg" id="pic"></div>
        </div>
        <h1 class="username">
          <%= userObj.username %>
        </h1>
      </div>
    </div>
    <div id="table_section">
      <img class="addressbook" src="../images/book2.png">
      <div id="button_section">
        <button id="made<%= userObj.user_id%>" class="tab_button made_button" onclick="play()">Made</button>
        <button id="liked<%= userObj.user_id%>"class="tab_button liked_button" onclick="play()">Liked</button>
        <button id="contrib<%= userObj.user_id%>"class="tab_button contrib_button" onclick="play()">Contrib</button>
      </div>
      <div class="row maps_table">
        <div class="table col-6 info_left">
          <p>
            <%= userObj.description %>
          </p>
        </div>
        <div class="table col-6 info_right">
          <ul id="map_list">
            <% for (var map in mapsObj) { %>
              <li>
                <button id="user_map<%= mapsObj[map].id %>">
                  <%= mapsObj[map].name %>
                </button>
              </li>
              <% } %>
          </ul>
          <button class='btn btn-danger create_map'> Create a new map</button>
        </div>
      </div>
    </div>
    <!-- <img src= /public/images/redx.png> -->
    <div class="mapdiv" id='map'></div>
    <div class=map_buttons>
      <button class='btn btn-primary name_map'>Name this map</button>
      <button class='btn btn-primary close_map'>Close Map</button>
    </div>
    <form method="POST" action="/maps" id="name_map_group">
      <div class="form-group">
        <label class="new_map_header" for="map_name">Enter a map name</label>
        <input name="map_name" type="text" class="form-control" id="map_name" placeholder="Ex: Ryan Reynolds sightings">
        <input name="pins_array" type="hidden">
      </div>
      <button type="submit" class="btn btn-primary">Save Map!</button>
    </form>
  </div>
  <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA3rnYZtj-7VMyBjm0Z2Qx3gYktTvZ4nqw"></script>
  <audio id="audio" src="/images/page.mp3"></audio>
</body>

</html>
